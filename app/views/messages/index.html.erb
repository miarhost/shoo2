<div class="allcontain">
<h1>Report</h1>
</div>

	<div class="container">
<p>Date: <%= Time.now.strftime("%d.%m.%y") %></p>
<p>Time: <%= Time.now.utc.strftime("%H:%M:%S") %></p>
  <table data-toggle="table" width="100%" border="0" cellspacing="0" cellpadding="0">
  <thead style= "background-color: #bdacac; font-family: 'Liberation Sans';font-size: 12.7px">
    <tr class="text-gray">
      <th data-sortable="true">First name</th>
      <th>Email</th>
      <th>Last name</th>
      <th data-sortable="true">Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
       <tr class="message-itself">
        <td><%= message.first_name %></td>
        <td><%= message.email %></td>
        <td><%= message.last_name %></td>
        <td><%= message.amount %></td>
       </tr>
    <% end %>
  </tbody>
</table>
</div>

